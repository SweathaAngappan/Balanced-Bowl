<!doctype html>
<html>
  <%- include('partials/head') %>
<body>
  <div class="container">
    <%- include('partials/header') %>

    <div class="card" style="max-width:700px;margin:20px auto">
      <h2>Share Your Success Story</h2>
      <p style="color:var(--muted)">Tell us how The Balanced Bowl helped you. Your story may inspire others!</p>

      <form action="/share-story" method="post">
        <div class="field">
          <label>Your Story</label>
          <textarea name="story" rows="6" required></textarea>
        </div>

        <div class="field">
          <label>Your Name (optional)</label>
          <input type="text" name="name" placeholder="e.g., A happy user">
        </div>

        <button class="btn">Submit Story</button>
      </form>
    </div>

    <%- include('partials/footer') %>
  </div>
</body>
</html>
