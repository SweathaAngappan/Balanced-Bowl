<header class="header">
  <div class="brand">
    <div class="logo">BB</div>
    <div>
      <h1>The Balanced Bowl</h1>
      <div style="font-size:12px;color:var(--muted)">Nutrition made simple</div>
    </div>
  </div>
 <nav class="nav">
  <a href="/" class="button">Home</a>

  <% if (currentUser && currentUser.role === 'user') { %>
    <a href="/dieticians">Find a Dietician</a>
  <% } %>

  <% if (!currentUser) { %>
    <a href="/login">Login</a>
    <a href="/register" class="button">Sign up</a>
  <% } else { %>

    <span style="margin-left:10px; font-weight:600; color:var(--text)">
      Hi, <%= currentUser.name %>!
    </span>

    <a href="/profile" class="button">Profile</a>

    <% if (currentUser.role === 'admin') { %>
      <a href="/admin" class="button">Admin</a>
    <% } %>

    <form action="/logout" method="post" style="display:inline">
      <button class="btn" type="submit">Logout</button>
    </form>
  <% } %>
</nav>

</header>
