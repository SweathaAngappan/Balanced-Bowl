<!doctype html>
<html>
  <%- include('partials/head') %>
<body>
  <div class="container">
    <%- include('partials/header') %>

    <div class="card" style="max-width:700px;margin:18px auto">
      <h2>Book with <%= dietician.user.name %></h2>
      <form action="/appointments/checkout" method="post">
        <input type="hidden" name="dieticianId" value="<%= dietician._id %>">
        <div class="field">
          <label>Choose date & time</label>
          <input type="datetime-local" name="date" required>
        </div>
        <div class="field">
          <label>Mode</label>
          <select name="mode">
            <% (dietician.consultationModes || ['online']).forEach(function(m){ %>
              <option value="<%= m %>"><%= m %></option>
            <% }) %>
          </select>
        </div>
        <div class="field">
          <label>Notes (optional)</label>
          <textarea name="notes"></textarea>
        </div>

        <p style="color:var(--muted)">Fee: ₹<%= dietician.fee %></p>

        

        <button class="btn">Confirm booking — ₹<%= dietician.fee %></button>
      </form>
    </div>

    <%- include('partials/footer') %>
  </div>
</body>
</html>
