          <h6><%= d.name %></h6>
          <p class="mb-0"><%= d.specialization %> â€” <%= d.location %></p>
          <a href="/dieticians/<%= d._id %>" class="btn btn-sm btn-outline-primary mt-2">View</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>
