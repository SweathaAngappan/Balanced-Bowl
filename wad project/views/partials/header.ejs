<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>The Balanced Bowl</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">The Balanced Bowl</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/dieticians">Find a Dietician</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
      </ul>
      <ul class="navbar-nav">
        <% if (!currentUser) { %>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><span class="nav-link">Hi, <%= currentUser.name %></span></li>
          <li class="nav-item"><a class="nav-link" href="/appointments/my">My Appointments</a></li>
          <% if (currentUser.role === "admin") { %>
            <li class="nav-item"><a class="nav-link" href="/admin">Admin</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<div class="container py-4">
